# Aurea Backend Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=Aurea API
DEBUG=false
ENVIRONMENT=production

# Database (Render provides DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@host:5432/aurea

# JWT Authentication (use a strong random secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Origins - Production domains
CORS_ORIGINS=["https://aureahealth.app","https://www.aureahealth.app","https://datascience.aureahealth.app"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5
